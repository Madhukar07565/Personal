<form id='paytm_payment_gateway_request'>
	<header-attributes>	
		<header-attribute> 
			<property>
			<name>method</name>
			<value>
				<default-value>paymentgateway.paytm.action.method</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>	
			</property>
			<property>
			<name>name</name>
			<value>
				<default-value>paymentgateway.paytm.form.name</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
			<property>
			<name>action</name>
			<value>
				<default-value>paymentgateway.paytm.action.url</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
		</header-attribute>
	</header-attributes>

	<body-attributes>
		<body-attribute>
			<property>
				<name>REQUEST_TYPE</name>
				<value>
					<default-value>paymentgateway.paytm.request.type</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>MID</name>
				<value>
					<default-value>paymentgateway.paytm.mid</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>ORDER_ID</name>
				<value>
					<default-value></default-value>
					<mapped-to-user-selected-value>orderId</mapped-to-user-selected-value>
					<read-from-bean>defaultCustomerOrderIDDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>CUST_ID</name>
				<value>
					<default-value></default-value>					
					<read-from-bean>defaultCustomerNameDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>TXN_AMOUNT</name>
				<value>
					<default-value>10.00</default-value>
					<mapped-to-user-selected-value>amount</mapped-to-user-selected-value>
					<read-from-bean></read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>CHANNEL_ID</name>
				<value>
					<default-value>paymentgateway.paytm.channel.id</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>INDUSTRY_TYPE_ID</name>
				<value>
					<default-value>paymentgateway.paytm.industry.type.id</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>WEBSITE</name>
				<value>
					<default-value>paymentgateway.paytm.website</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>MOBILE_NO</name>
				<value>
					<default-value></default-value>
					<read-from-bean>defaultCustomerPhoneNumberDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>EMAIL</name>
				<value>
					<default-value></default-value>
					<read-from-bean>defaultCustomerEmailDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>CALLBACK_URL</name>
				<value>
					<default-value>/response/paytm</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>CHECKSUMHASH</name>
				<value>
					<default-value>REQUEST_TYPE,MID,ORDER_ID,CUST_ID,TXN_AMOUNT,CHANNEL_ID,INDUSTRY_TYPE_ID,WEBSITE,MOBILE_NO,EMAIL,CALLBACK_URL</default-value>
					<read-from-bean>paytmCheckSumHashDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
	</body-attributes>
</form>	
