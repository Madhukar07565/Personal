<form id='hdfc_payment_gateway_request'>
	<header-attributes>	
		<header-attribute> 
			<property>
			<name>method</name>
			<value>
				<default-value>paymentgateway.hdfc.action.method</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>	
			</property>
			<property>
			<name>name</name>
			<value>
				<default-value>paymentgateway.hdfc.form.name</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
			<property>
			<name>action</name>
			<value>
				<default-value>paymentgateway.hdfc.action.url</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
	</header-attribute>
	</header-attributes>

	<body-attributes>
		<body-attribute>
			<property>
				<name>id</name>
				<value>
					<default-value>paymentgateway.hdfc.merchant.id</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>actionURL</name>
				<value>
					<default-value>paymentgateway.hdfc.action.url</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>password</name>
				<value>
					<default-value>paymentgateway.hdfc.password</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>amt</name>
				<value>
					<default-value>10.00</default-value>
					<mapped-to-user-selected-value>amount</mapped-to-user-selected-value>
					<read-from-bean></read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>trackid</name>
				<value>
					<default-value></default-value>
					<mapped-to-user-selected-value>orderId</mapped-to-user-selected-value>
					<read-from-bean>defaultCustomerOrderIDDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>currencycode</name>
				<value>
					<default-value>356</default-value>
					<mapped-to-user-selected-value>currency</mapped-to-user-selected-value>
					<read-from-bean></read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>langid</name>
				<value>
					<default-value>paymentgateway.hdfc.language.code</default-value>					
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>action</name>
				<value>
					<default-value>paymentgateway.hdfc.action.code</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>errorURL</name>
				<value>
					<default-value>/response/hdfc</default-value>
					
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>responseURL</name>
				<value>
					<default-value>/response/hdfc</default-value>					
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>redirectURL</name>
				<value>
					<default-value>id,password,action,langid,currencycode,amt,responseURL,errorURL,trackid</default-value>					
					<read-from-bean>hdfcRedirectURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>		
	</body-attributes>
	<script-tags>
		<script-tag>
			<property>
					<name>script</name>
					<value>
					<default-value>hdfcSubmitScript</default-value>
					</value>	
			</property>
		</script-tag>
	</script-tags>
</form>	
