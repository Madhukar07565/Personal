<form id='asiapay_payment_gateway_request'>
	<header-attributes>	
		<header-attribute> 
			<property>
			<name>method</name>
			<value>
				<default-value>paymentgateway.asiapay.action.method</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>	
			</property>
			<property>
			<name>name</name>
			<value>
				<default-value>paymentgateway.asiapay.form.name</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
			<property>
			<name>action</name>
			<value>
				<default-value>paymentgateway.asiapay.action.url</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
		</header-attribute>
	</header-attributes>

	<body-attributes>
		<body-attribute>
			<property>
				<name>amount</name>
				<value>
					<default-value>100.00</default-value>
					<mapped-to-user-selected-value>amount</mapped-to-user-selected-value>
					<read-from-bean></read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>merchantId</name>
				<value>
					<default-value>paymentgateway.asiapay.merchant.id</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>orderRef</name>
				<value>
					<default-value></default-value>
					<mapped-to-user-selected-value>orderId</mapped-to-user-selected-value>
					<read-from-bean>defaultCustomerOrderIDDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>currCode</name>
				<value>
					<default-value>608</default-value>
					<mapped-to-user-selected-value>currency</mapped-to-user-selected-value>
					<read-from-bean></read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>successUrl</name>
				<value>
					<default-value>/response/asiapay</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>failUrl</name>
				<value>
					<default-value>/response/asiapay</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>cancelUrl</name>
				<value>
					<default-value>/response/asiapay</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
			<body-attribute>
			<property>
				<name>payType</name>
				<value>
					<default-value>paymentgateway.asiapay.pay.type</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>remark</name>
				<value>
					<default-value>test</default-value>
					<read-from-bean></read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>lang</name>
				<value>
					<default-value>paymentgateway.asiapay.language.code</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>payMethod</name>
				<value>
					<default-value>paymentgateway.asiapay.pay.method</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>		
		<body-attribute>
			<property>
				<name>secureHash</name>
				<value>
					<default-value>merchantId,orderRef,currCode,amount,payType</default-value>
					<read-from-bean>asiapaySecureHashDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>		
	</body-attributes>
</form>	
