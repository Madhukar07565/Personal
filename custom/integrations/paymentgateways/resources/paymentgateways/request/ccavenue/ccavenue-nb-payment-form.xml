<form id='ccavenue_nb_payment_gateway_request'>
	<header-attributes>	
		<header-attribute> 
		<property>
			<name>id</name>
			<value>
				<default-value>paymentgateway.ccavenue.form.id</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>	
			</property>
			<property>
			<name>method</name>
			<value>
				<default-value>paymentgateway.ccavenue.action.method</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>	
			</property>
			<property>
			<name>name</name>
			<value>
				<default-value>paymentgateway.ccavenue.form.name</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
			<property>
			<name>action</name>
			<value>
				<default-value>paymentgateway.ccavenue.action.url</default-value>
				<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
			</value>
			</property>	
		</header-attribute>
	</header-attributes>

	<body-attributes>
		<body-attribute>
			<property>
				<name>merchant_id</name>
				<value>
					<default-value>paymentgateway.ccavenue.merchant.id</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
					<add-to-submitform>false</add-to-submitform>
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>access_code</name>
				<value>
					<default-value>paymentgateway.ccavenue.access.code</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>order_id</name>
				<value>
					<default-value></default-value>
					<mapped-to-user-selected-value>orderId</mapped-to-user-selected-value>
					<read-from-bean>defaultCustomerOrderIDDecorator</read-from-bean>	
					<add-to-submitform>false</add-to-submitform>
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>currency</name>
				<value>
					<default-value>INR</default-value>
					<mapped-to-user-selected-value>currency</mapped-to-user-selected-value>
					<add-to-submitform>false</add-to-submitform>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>amount</name>
				<value>
					<default-value>100</default-value>
					<mapped-to-user-selected-value>amount</mapped-to-user-selected-value>
					<add-to-submitform>false</add-to-submitform>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>redirect_url</name>
				<value>
					<default-value>/response/ccavenue_nb</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>
					<add-to-submitform>false</add-to-submitform>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>cancel_url</name>
				<value>
					<default-value>/response/ccavenue_nb</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>
					<add-to-submitform>false</add-to-submitform>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>language</name>
				<value>
					<default-value>paymentgateway.ccavenue.language.code</default-value>
					<read-from-bean>defaultSiteURLDecorator</read-from-bean>
					<add-to-submitform>false</add-to-submitform>	
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>payment_option</name>
				<value>
					<default-value>paymentgateway.ccavenue.payment.option.netbanking</default-value>
					<read-from-bean>defaultPropertiesDecorator</read-from-bean>
					<add-to-submitform>false</add-to-submitform>
				</value>	
			</property>
		</body-attribute>
		<body-attribute>
			<property>
				<name>encRequest</name>
				<value>
					<default-value>command,access_code,encRequest</default-value>
					<read-from-bean>defaltCCAvenueEncReqDecorator</read-from-bean>	
				</value>	
			</property>
		</body-attribute>
		
		</body-attributes>
</form>